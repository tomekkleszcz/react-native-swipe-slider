{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "jsx": "react-native",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "dist/",
        "listFiles": false,
        "noEmitHelpers": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}