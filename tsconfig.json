{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "jsx": "react-native",
        "noImplicitAny": false,
        "incremental": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "baseUrl": "./",
        "outDir": "dist",
        "noEmitHelpers": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}